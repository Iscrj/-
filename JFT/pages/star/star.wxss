/* pages/star/star.wxss */
.title{
  font-size: 33rpx;
  font-weight: bold;
  color: #f5a100;
  letter-spacing: 2rpx;
  margin: 30rpx 0 0 30rpx;
  border-left: 8rpx solid #f5a100;
  padding-left: 20rpx;
  height: 35rpx;
  line-height: 35rpx;
}

.content{
  display: -webkit-flex;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.content .scene{
  margin: 20rpx auto;
  border: 2rpx solid #f2f2f2;
  width: 313rpx;
}

.content .scene .img1{
  width: 100%;
  height: 230rpx;
}

.little_title{
  display: -webkit-flex;
  padding-bottom: 10rpx;
  width: 313rpx;
}

.little_title .text{
  font-size: 26rpx;
  margin: 0 auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}