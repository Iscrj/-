/**index.wxss**/
 .swiper {
  height: 350rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
} 

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:30rpx 30rpx;
  box-sizing: border-box; 
} 

.title{
  display: -webkit-flex;
}

.line{
  height: 2rpx;
  width: 34.2%;
  background-color: #ccc;
  margin: 20rpx 25rpx;
}

.header{
  font-size: 28rpx;
  width: 23%;
  text-align: center;
}

.tab{
  font-size: 30rpx;
  border-left: 10rpx solid #70e966;
  padding-left: 15rpx;
  margin: 30rpx 15rpx 0;
}
.content{
  display: -webkit-flex;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.content .scene{
  margin: 0 15rpx 50rpx;
  border: 2rpx solid #f2f2f2;
  width: 313rpx;
}

.content .scene .img1{
  width: 100%;
  height: 230rpx;
}

.little_title{
  display: -webkit-flex;
  padding-bottom: 10rpx;
  width: 313rpx;
}

.little_title .img2{
  flex: 1;
  height: 60rpx;
  margin-top: -30rpx;
  margin-left: 10rpx;
}

.little_title .text{
  flex: 4;
  font-size: 28rpx;
  margin-left: 15rpx;
  margin-top: -10rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.footer{
  display: -webkit-flex;
  margin-top: 40rpx;
}


.indexImg{
  width: 100%;
  height: 1784rpx;
}