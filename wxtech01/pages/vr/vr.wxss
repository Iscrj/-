/* pages/vr/vr.wxss */
.swiper {
  height: 350rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.placeholderCss{
  font-size: 28rpx;
}

.search{
  display: -webkit-flex;
  margin: 20rpx;
  padding: 0 11rpx;
}

.searchInput{
  flex: 3;
  border: 2rpx solid #f2f2f2;
  height: 50rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}

 .searchBtn{
  margin-left: 20rpx;
  height: 55rpx;
} 

.nav{
  display: -webkit-flex;
  flex-wrap: wrap;
  padding: 0 30rpx; 
  margin-top: 30rpx;  
}

.navBtn{
  margin: 10rpx 0;
}

.normal{
  width: 150rpx;
  height: 58rpx;
  margin: 0 10rpx;
  line-height: 58rpx !important;
}

.is_checked{
  width: 150rpx;
  height: 58rpx;
  line-height: 58rpx;
  background-color: #70e966;
  color: #fff;
  margin: 0 10rpx;
}

.container {
  padding: 0 30rpx;
} 

.title{
  display: -webkit-flex;
}

.line{
  height: 2rpx;
  width: 34.2%;
  background-color: #ccc;
  margin: 20rpx 25rpx;
}

.header{
  font-size: 28rpx;
  width: 23%;
  text-align: center;
}

.content{
  display: -webkit-flex;
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.content .scene{
  margin: 0 15rpx 50rpx;
  border: 2rpx solid #f2f2f2;
  width: 313rpx;
}

.content .scene .img1{
  width: 100%;
  height: 230rpx;
}

.little_title{
  display: -webkit-flex;
  padding-bottom: 10rpx;
  width: 313rpx;
}

.little_title .img2{
  flex: 1;
  height: 60rpx;
   margin-top: -20rpx; 
  margin-left: 10rpx;
}

.little_title .text{
  flex: 4;
  font-size: 28rpx;
  margin-left: 15rpx;
  /* margin-top: -10rpx; */
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.read{
  display: -webkit-flex;
  font-size: 22rpx;
}

.read view{
  margin: 0 20rpx 10rpx;
}

.nodata_text{
  font-size: 28rpx;
  padding-top: 100rpx;
  text-align: center;
}

.footer{
  display: -webkit-flex;
  margin: 30rpx 0;
}
